<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight= "1">

        <TextView
            android:layout_height="1px"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="#7b98ff"
            android:text="현장 작업요청서"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/textViewManageNo"
            android:layout_height="1px"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#7b98ff"
            android:text="관리번호"
            android:textColor="#ffffff"
            android:gravity="center"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="5"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="#0008ff"
                    android:textSize="15sp"
                    android:text="거 래 처"/>

                <TextView
                    android:id="@+id/textViewCustomer"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="로딩중...."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="#0008ff"
                    android:textSize="15sp"
                    android:text="현 장 명"/>

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#0008ff"

                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:text="작업희망일"/>

                <TextView
                    android:id="@+id/textViewWorkDate"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#0008ff"
                    android:gravity="center_vertical|right"
                    android:textSize="15sp"
                    android:text="의뢰부서"/>

                <TextView
                    android:id="@+id/textViewDeptName"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#0008ff"
                    android:gravity="center_vertical|right"
                    android:textSize="15sp"
                    android:text="의 뢰 자"/>

                <TextView
                    android:id="@+id/textViewEmployeeName"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal"
                android:background="#fff200">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#ff0011"
                    android:gravity="center_vertical|right"
                    android:textSize="15sp"
                    android:text="슈퍼바이저"
                    android:background="#fff200"/>

                <Spinner
                    android:id="@+id/spinnerSupervisor"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""
                    android:background="#fff200"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#0008ff"
                    android:gravity="center_vertical|right"
                    android:textSize="15sp"
                    android:text="작업구분"/>

                <TextView
                    android:id="@+id/textViewWorkTypeName"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:textColor="#0008ff"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:text="특기사항"
                    />

                <TextView
                    android:id="@+id/textViewRemark"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gray_bg"
            android:text="이전화면"
            android:onClick="mOnClick"
            android:id="@+id/btnPrev"
            />


        <Button
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_bg"
            android:textColor="#ffffff"
            android:text="배정하기"
            android:textStyle="bold"
            android:onClick="mOnClick"
            android:id="@+id/btnNext"
            />

    </LinearLayout>
</LinearLayout>